datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id          String    @unique
  name        String?
  email       String?
  imageUrl    String?
  signUpWith  String?
  joinedOn    DateTime?
  Post        Post[]
  Job         Job[]
}

model Admin {
  id        String    @unique
  adminName String?
  password  String?
  joinedOn  DateTime?
}

model Post {
  id     Int     @id @default(autoincrement())
  userID Int?
  user   User?   @relation(fields: [userID], references: [id])
  name   String?
  url    String?  @db.VarChar(512)
  text   String?  @db.VarChar(512)
  Tag    Tag[]
}

model TagList {
  id   Int     @id @default(autoincrement())
  name String?
  Tag  Tag[]
}

model Tag {
  id     Int      @id @default(autoincrement())
  postID Int?
  tagID  Int?
  post   Post?    @relation(fields: [postID], references: [id])
  tag    TagList? @relation(fields: [tagID], references: [id])
  name   String?
}

model Job {
  id             String   @unique
  userId         String?
  user           User?    @relation(fields: [userId], references: [id])
  jobTitle       String?
  jobDescription String?
  jobURL         String?
  isActive       Boolean
  postedOn       DateTime
}
